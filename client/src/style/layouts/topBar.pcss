.top-bar {
  @apply bg-slate-200 p-1 mb-3;
}

.fa-octopus-deploy {
  @apply text-xl px-1 m-1;
}

.fa-octopus-deploy:hover {
  @apply cursor-pointer text-amber-500;
}

.menu__title {
  @apply text-xl px-1 m-1;
}

.menu {
  @apply flex justify-between inline-block;
}

.menu__left {
  @apply flex align-bottom my-auto;
}

.menu__app-name {
  @apply px-2 font-extrabold;
}

.menu__right {
  @apply px-2 flex flex-row;
}
